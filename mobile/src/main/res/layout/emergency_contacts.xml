<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@drawable/bg">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:id="@+id/er_contact1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:id="@+id/edit_contact_1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:id="@+id/i_name1"
                    android:padding="5dp"
                    android:gravity="center_vertical|right"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/name1"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:textColor="#ffffff"
                    android:paddingLeft="5dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:id="@+id/i_relationship1"
                    android:padding="5dp"
                    android:gravity="center_vertical|right"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/relationship1"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:textColor="#ffffff"
                    android:paddingLeft="5dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:id="@+id/i_phone1"
                    android:padding="5dp"
                    android:gravity="center_vertical|right"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/phone1"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:textColor="#ffffff"
                    android:paddingLeft="5dp"
                    android:textSize="16dp" />
            </LinearLayout>
            <ImageView
                android:layout_width="290dp"
                android:layout_height="1dp"
                android:id="@+id/person1"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:id="@+id/edit_contact_2">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:id="@+id/i_name2"
                    android:padding="5dp"
                    android:gravity="center_vertical|right"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/name2"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:textColor="#ffffff"
                    android:paddingLeft="5dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:id="@+id/i_relationship2"
                    android:padding="5dp"
                    android:gravity="center_vertical|right"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/relationship2"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:textColor="#ffffff"
                    android:paddingLeft="5dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:id="@+id/i_phone2"
                    android:padding="5dp"
                    android:gravity="center_vertical|right"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/phone2"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:textColor="#ffffff"
                    android:paddingLeft="5dp"
                    android:textSize="16dp" />
            </LinearLayout>
            <ImageView
                android:layout_width="290dp"
                android:layout_height="1dp"
                android:id="@+id/person2"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:id="@+id/edit_contact_3">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:id="@+id/i_name3"
                    android:padding="5dp"
                    android:gravity="center_vertical|right"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/name3"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:textColor="#ffffff"
                    android:paddingLeft="5dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:id="@+id/i_relationship3"
                    android:padding="5dp"
                    android:gravity="center_vertical|right"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/relationship3"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:textColor="#ffffff"
                    android:paddingLeft="5dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:id="@+id/i_phone3"
                    android:padding="5dp"
                    android:gravity="center_vertical|right"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/phone3"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:textColor="#ffffff"
                    android:paddingLeft="5dp"
                    android:textSize="16dp" />
            </LinearLayout>
            <ImageView
                android:layout_width="290dp"
                android:layout_height="1dp"
                android:id="@+id/person3"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addContact"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        android:text="@string/add_contact"
        android:drawableLeft="@drawable/createprofile"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="85dp" />




</LinearLayout>